{
  "files": [],
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["scripts/src/*", "src/global.d.ts", "env.d.ts", "src/**/*.d.ts", "src/**/*", "src/**/*.json", "src/**/*.vue"],
  "moduleResolution": "node",
  "resolveJsonModule": true,
  "esModuleInterop": true,
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "target": "es6",
    "types": ["vite/client", "node"],
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}